    "@styled-system/css": ">=5",
    "polished": ">=3.4.4",
    "react": ">=16",
    "styled-components": ">=5",
    "styled-system": ">=5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/ds.esm.js",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@storybook/addon-a11y": "^5.3.18",
