{
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": "./dist/button.js",
    "./tag": "./dist/tag.js"
  },
  "typesVersions": {
    "*": {
      "button": [
        "dist/button.d.ts"
      ],
      "tag": [
        "dist/tag.d.ts"
      ]
    }
  },  
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:storybook",
    "build:lib": "npm run rollup",
    "build:storybook": "build-storybook",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "rollup": "rollup -c"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "radius-limeade",
  "author": "Sumit Arora",
  "module": "dist/radius.esm.js",
  "size-limit": [
    {
      "path": "dist/radius.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/radius.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@geometricpanda/storybook-addon-badges": "^0.2.1",
    "@size-limit/preset-small-lib": "^5.0.5",
    "@storybook/addon-a11y": "^6.5.7",
    "@storybook/addon-controls": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.5.7",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.7",
    "@storybook/addon-storyshots": "^6.5.7",
    "@storybook/addon-storysource": "^6.5.7",
    "@storybook/addons": "^6.4.19",
    "@storybook/builder-webpack5": "^6.5.7",
    "@storybook/manager-webpack5": "^6.5.7",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/react": "^6.5.7",
    "@storybook/testing-react": "1.2.3",
    "@storybook/theming": "^6.5.7",
    "@testing-library/react": "^12.1.5",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/react-test-renderer": "^17.0.2",
    "classnames": "^2.3.1",
    "husky": "^6.0.0",
    "postcss": "^8.4.14",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "1.49.7",
    "size-limit": "^5.0.5",
    "storybook-addon-designs": "^6.2.1",
    "storybook-addon-pseudo-states": "^1.14.0",
    "storybook-design-token": "^1.4.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0"
  },
  "browser": {
    "crypto": false,
    "stream": false
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "rollup": "^2.75.6",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.2.2"
  }
}
