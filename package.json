{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:storybook",
    "build:lib": "npm run rollup",
    "build:storybook": "build-storybook",
    "size": "size-limit",
    "analyze": "size-limit --why",
