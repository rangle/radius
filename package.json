{
  "version": "0.11.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": "./dist/button.js",
    "./tag": "./dist/tag.js"
  },
  "typesVersions": {
    "*": {
      "button": ["dist/button.d.ts"],
      "tag": ["dist/tag.d.ts"]
    }
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "npm run build:lib && npm run build:demo && npm run build:storybook",
    "build:lib": "tsdx build",
    "build:demo": "npm run build --prefix demo",
    "build:storybook": "build-storybook",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --passWithNoTests --watch",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "rollup": "rollup -c"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "radius-limeade",
  "author": "Sumit Arora",
  "module": "dist/radius.esm.js",
  "size-limit": [
    {
      "path": "dist/radius.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/radius.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@geometricpanda/storybook-addon-badges": "^0.2.1",
    "@size-limit/preset-small-lib": "^5.0.1",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-controls": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-storyshots": "^6.4.19",
    "@storybook/addon-storysource": "^6.4.19",
    "@storybook/addons": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-react": "1.2.3",
    "@styled-system/css": "^5.1.5",
    "@testing-library/react": "^12.0.0",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.9",
    "@types/styled-system": "^5.1.11",
    "babel-loader": "^8.2.2",
    "classnames": "2.3.1",
    "css-loader": "6.6.0",
    "dotenv-webpack": "^7.0.3",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "parcel": "^2.4.1",
    "postcss": "^8.4.8",
    "postcss-modules": "4.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "1.49.7",
    "sass-loader": "12.4.0",
    "size-limit": "^5.0.1",
    "storybook-design-token": "^1.4.0",
    "style-loader": "3.3.1",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "4.2.2",
    "webpack": "^5.38.1"
  },
  "browser": {
    "crypto": false,
    "stream": false
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "rollup": "^2.70.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.2.1"
  }
}
