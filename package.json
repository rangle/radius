    "test": "jest",
    "test:watch": "jest --watch"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "jest"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "radius",
  "author": "Sumit Arora",
  "module": "dist/radius.esm.js",
  "size-limit": [
    {
      "path": "dist/radius.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/radius.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.18.2",
